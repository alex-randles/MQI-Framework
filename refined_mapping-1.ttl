 rr:subjectMap [ 	
 	 rr:template "https://kb.beyond2022.ie/organisation-appellation/{COUNTRY}/{LABEL}";	
	 rr:termType rr:Literal;	
	 rr:class b2022:E81_Actor_Appellation, cidoc:E41_Appellations;	
